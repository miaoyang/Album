<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.recommend.RecommendFragment"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:id="@+id/recommend_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20">
            <com.ym.album.ui.widget.SearchView
                android:id="@+id/recommend_search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/recommend_top_layout_sub_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_below="@+id/recommend_search_view"
                android:layout_marginTop="@dimen/dp_20">
                <LinearLayout
                    android:id="@+id/recommend_top_puzzle_layout"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        app:cardCornerRadius="@dimen/dp_40"
                        app:cardElevation="@dimen/dp_4"
                        app:cardPreventCornerOverlap="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/iv_recommend_puzzle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/iv_recommend_puzzle"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/tv_recommend_puzzle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_recommend_puzzle_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/recommend_top_crop_layout"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        app:cardCornerRadius="@dimen/dp_40"
                        app:cardElevation="@dimen/dp_4"
                        app:cardPreventCornerOverlap="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/iv_recommend_crop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/iv_recommend_crop"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/tv_recommend_crop_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_recommend_crop_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/recommend_top_art_photo_layout"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        app:cardCornerRadius="@dimen/dp_40"
                        app:cardElevation="@dimen/dp_4"
                        app:cardPreventCornerOverlap="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/iv_recommend_art_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/iv_recommend_art_photo"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/tv_recommend_art_photo_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_recommend_art_photo_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/recommend_top_video_making_layout"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        app:cardCornerRadius="@dimen/dp_40"
                        app:cardElevation="@dimen/dp_4"
                        app:cardPreventCornerOverlap="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/iv_recommend_video_making"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/iv_recommend_video_making"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/tv_recommend_video_making_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_recommend_video_making_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_item_recommend_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recommend_top_layout_sub_1">
            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>