<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ym.album.ui.widget.CustomImageView
        android:id="@+id/iv_item_recommend_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_big_ic" />
    <RelativeLayout
        android:id="@+id/item_recommend_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_item_recommend_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_item_recommend_introduce"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/dp_6"/>

        <TextView
            android:id="@+id/tv_item_recommend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_item_recommend_time"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_below="@+id/tv_item_recommend_introduce" />
    </RelativeLayout>

</RelativeLayout>