<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/select_top_bar"
        layout="@layout/select_image_top_layout"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/middle_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/select_top_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scrollbars="none"
                android:overScrollMode="never"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/middle_scroll">

        <RelativeLayout
            android:id="@+id/ll_dir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tv_dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@string/ip_all_images"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_dir"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/tv_dir"
                android:src="@mipmap/text_indicator"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/btn_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/tv_select_preview"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_select_image_loading_refresh"
        android:src="@drawable/loading_refresh"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_select_image_loading_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_loading_refresh"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_select_image_loading_refresh"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>