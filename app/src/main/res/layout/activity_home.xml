<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ym="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabs_rg"/>

    <RadioGroup
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#dcdcdc"
        android:orientation="horizontal">

        <com.ym.album.ui.ui.DecRadioButton
            android:id="@+id/rb_home_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ym:rb_width="30dp"
            ym:rb_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_album"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/home_album"
            android:textColor="@color/selector_rg"
            android:textSize="16sp" />

        <com.ym.album.ui.ui.DecRadioButton
            android:id="@+id/rb_home_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ym:rb_width="30dp"
            ym:rb_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_recommend"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/home_recommend"
            android:textColor="@color/selector_rg"
            android:textSize="16sp" />

        <com.ym.album.ui.ui.DecRadioButton
            android:id="@+id/rb_home_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ym:rb_width="30dp"
            ym:rb_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_relative"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/home_relatives"
            android:textColor="@color/selector_rg"
            android:textSize="16sp" />

        <com.ym.album.ui.ui.DecRadioButton
            android:id="@+id/rb_home_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ym:rb_width="30dp"
            ym:rb_height="30dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_search"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/home_search"
            android:textColor="@color/selector_rg"
            android:textSize="16sp" />

    </RadioGroup>

</RelativeLayout>