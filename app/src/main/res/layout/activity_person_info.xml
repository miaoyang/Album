<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.personal.PersonInfoActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_60">

        <RelativeLayout
            android:id="@+id/person_info_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_person_info_backup"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/forget_password_backup"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_person_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/tv_person_info_text"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/person_info_head_portrait_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_info_top_layout"
            android:layout_marginTop="@dimen/dp_20">
            <TextView
                android:id="@+id/tv_person_info_head_portrait_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_person_info_head_portrait"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_centerVertical="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_person_info_head_image"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_4"
                app:cardPreventCornerOverlap="true"
                android:layout_toLeftOf="@+id/iv_person_info_head_backup">

                <ImageView
                    android:id="@+id/iv_person_info_head_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/login_image"/>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/iv_person_info_head_backup"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:src="@drawable/person_join_click"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_info_username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_info_head_portrait_layout"
            android:layout_marginTop="@dimen/dp_20">
            <TextView
                android:id="@+id/tv_person_info_username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_person_info_username"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_person_info_username_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_person_info_username_temp"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/iv_person_info_username_backup"/>

            <ImageView
                android:id="@+id/iv_person_info_username_backup"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:src="@drawable/person_join_click"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_info_my_qrcode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_info_username_layout"
            android:layout_marginTop="@dimen/dp_20">
            <TextView
                android:id="@+id/tv_person_info_qrcode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_person_info_my_qr_code"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_centerVertical="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_person_info_qrcode_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardPreventCornerOverlap="true"
                android:layout_toLeftOf="@+id/iv_person_info_qrcode_backup">
                <ImageView
                    android:id="@+id/iv_person_info_qrcode_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/iv_person_qr_code"/>
            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/iv_person_info_qrcode_backup"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:src="@drawable/person_join_click"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/person_info_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_info_my_qrcode_layout"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_person_info_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:text="@string/tv_person_info_my_local_address"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_person_info_address_backup"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/person_join_click" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_info_my_sign_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_info_address_layout"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_person_info_my_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:text="@string/tv_person_info_my_sign"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_person_info_my_sign_backup"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/person_join_click" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>