<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.PersonalFragment"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/person_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_30">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_person_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20">
        <ImageView
            android:id="@+id/iv_person_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/login_image"
            />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/person_top_layout_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_person_cardview">
            <TextView
                android:id="@+id/tv_person_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_person_username"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp_20"/>
            <TextView
                android:id="@+id/tv_person_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_person_tel"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp_20"/>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>