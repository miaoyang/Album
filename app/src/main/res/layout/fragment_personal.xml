<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.person.PersonalHomeFragment"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_60">

        <RelativeLayout
            android:id="@+id/person_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_person_cardview"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_40"
                app:cardElevation="@dimen/dp_4"
                app:cardPreventCornerOverlap="true"
                android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_person_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/login_image"
                />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/person_top_layout_info"
                android:layout_width="@dimen/dp_220"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toRightOf="@+id/iv_person_cardview"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_person_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tv_person_username"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_person_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="2"
                    android:text="@string/tv_person_sign"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="normal" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/iv_person_qr_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/iv_person_qr_code"
                    android:clickable="true"
                    android:focusable="true"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/person_my_little_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/person_top_layout"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/person_my_little_image"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/iv_person_little_image"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/person_my_little_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toEndOf="@+id/person_my_little_image"
                android:text="@string/iv_person_little_beauty"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/person_my_little_click"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/person_join_click" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_emoji_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/person_my_little_layout"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/person_emoji_image"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/iv_person_emoji" />

            <TextView
                android:id="@+id/person_emoji_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toEndOf="@+id/person_emoji_image"
                android:gravity="center"
                android:text="@string/iv_person_emoji"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/person_emoji_click"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/person_join_click" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_recently_delete_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/person_emoji_layout"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/person_recently_delete_image"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/iv_person_recently_delete" />

            <TextView
                android:id="@+id/person_recently_delete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toEndOf="@+id/person_recently_delete_image"
                android:gravity="center"
                android:text="@string/iv_person_recently_delete"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/person_recently_delete_click"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/person_join_click" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/person_up_and_download_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/person_recently_delete_layout"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/person_up_and_download_image"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/iv_person_up_and_download" />

            <TextView
                android:id="@+id/person_up_and_download_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toEndOf="@+id/person_up_and_download_image"
                android:gravity="center"
                android:text="@string/iv_person_up_and_download"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/person_up_and_download_click"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/person_join_click" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/person_up_and_download_layout"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/person_setting_image"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/iv_person_setting" />

            <TextView
                android:id="@+id/person_setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toEndOf="@+id/person_setting_image"
                android:gravity="center"
                android:text="@string/iv_person_setting"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/person_setting_click"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/person_join_click" />
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>