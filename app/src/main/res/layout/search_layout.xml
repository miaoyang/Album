<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:id="@+id/search_layout_id">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_search_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/et_search_icon"
                    android:layout_margin="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_5"
                    android:background="@drawable/search_edittext_shape"
                    android:imeOptions="actionSearch"
                    android:hint="@string/sv_recommend_search_text"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:inputType="text" />
                <ImageView
                    android:id="@+id/iv_search_delete"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:visibility="gone"
                    android:src="@drawable/iv_delete_bg"
                    android:layout_gravity="right|center_vertical"
                    tools:ignore="RtlHardcoded" />
        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sl_search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.ym.album.ui.widget.SearchListView
                android:id="@+id/lv_search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_search_list_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/iv_search_list_clear_res"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>