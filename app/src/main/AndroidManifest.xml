<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ym.album">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AlbumApp"
        android:allowBackup="true"
        android:icon="@mipmap/album_yellow"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/album_yellow"
        android:supportsRtl="true"
        android:theme="@style/Theme.Album.NoActionBar"
        tools:ignore="Instantiatable">
        <activity
            android:name=".ui.activity.personal.PersonInfoActivity"
            android:exported="false"
            android:label="@string/title_activity_person_info"
            android:theme="@style/Theme.Album.NoActionBar.NoActionBar" />
        <activity
            android:name=".ui.activity.image.ImageClickActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.account.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.account.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.account.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.account.LoginActivity"
            android:exported="true"
            android:label="@string/logo_name"
            android:theme="@style/Theme.Album.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:label="@string/logo_name">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".ui.BaseActivity"
            android:exported="true"
            android:label="@string/title_activity_base"
            android:theme="@style/Theme.Album.NoActionBar" />
        <activity
            android:name=".ui.activity.CropActivity"
            android:exported="true" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.ym.album.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>