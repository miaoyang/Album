<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ym.album"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.ym.album.AlbumApp"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/album_yellow"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/album_yellow"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Album.NoActionBar" >
        <activity
            android:name="com.ym.album.ui.activity.image.ImageClickActivity"
            android:exported="false" />
        <activity
            android:name="com.ym.album.ui.activity.account.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.ym.album.ui.activity.account.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.ym.album.ui.activity.account.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.ym.album.ui.activity.account.LoginActivity"
            android:exported="true"
            android:label="@string/logo_name"
            android:theme="@style/Theme.Album.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ym.album.ui.activity.HomeActivity"
            android:exported="true" />
        <activity
            android:name="com.ym.album.ui.activity.MainActivity"
            android:exported="true"
            android:label="@string/logo_name" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.ym.album.ui.BaseActivity"
            android:exported="true"
            android:label="@string/title_activity_base"
            android:theme="@style/Theme.Album.NoActionBar" />
        <activity
            android:name="com.ym.album.ui.activity.CropActivity"
            android:exported="true" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.ym.album.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.ym.album.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />
    </application>

</manifest>